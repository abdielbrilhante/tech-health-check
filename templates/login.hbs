  <body>
    <form action="/login" method="post">
      <h1>
        Login
      </h1>
      <label for="email">
        <div>Email</div>
        <input id="email" name="email" type="text" />
      </label>
      <label for="password">
        <div>Password</div>
        <input id="password" name="password" type="password" />
      </label>
      <button type="submit">
        Login
      </button>
    </form>
  </body>
